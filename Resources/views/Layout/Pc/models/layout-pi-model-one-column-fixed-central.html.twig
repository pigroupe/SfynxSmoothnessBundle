{% stylesheet "bundles/sfynxsmoothness/layout/pi/models/layout-pi-model-base.css" %}
{% stylesheet "bundles/sfynxsmoothness/layout/pi/models/layout-pi-model-one-column-fixed-central.css" %}
{% extends getParameter('sfynx.auth.theme.layout.global') %}

{% block global_title %}{{ parent() }}{% endblock %}

{% block global_meta %}{{ parent() }}{% endblock %}

{% block global_script_divers %}{{ parent() }}{% endblock %}

{% block global_layout %}

	<div id="global">

		<div id="entete">
			{% block pc_header %}
			<h1>
				<img src="/bundles/sfynxsmoothness/layout/pi/models/picto/03.png" alt="">
				Sfynx - Content Management Framework
			</h1>
			<p class="sous-titre">
				<strong>Caractéristiques:</strong>
				largeur fixe 750px,
				conteneur global centré,
				avec hauteur minimale de 100% de la fenêtre du navigateur.
			</p>
			{% endblock %}
		</div><!-- #entete -->
		
		<div id="navigation">
			{% block pc_menuwrapper %}
			<ul>
				<li><a href="index.html">Accueil</a></li>
				<li><a href="liste.html">Tous les gabarits</a></li>
				<li><a href="utiliser.html">Utilisation</a></li>
				<li><a href="licence.html">Licence</a></li>
				<li><a href="credits.html">Crédits</a></li>
			</ul>
			{% endblock %}
			
	        {# {% include "SfynxAuthBundle::connexion-ul-li.html.twig" %} #}
		    {% set widget_service_params = {"template":"SfynxSmoothnessBundle:Login@@@@@@@@Security:connexion-ajax.html.twig"} %} 
	 	    {{ getService('pi_app_admin.manager.authentication').renderSource('SfynxAuthBundle:User~_connexion_default', 'fr_FR', widget_service_params)|raw }}
				
			</div><!-- #navigation -->
		
		<div id="contenu">
			{% block content %}
		
			<!-- Attention: les conteneurs div#cont-normal et div#cont-special
			servent uniquement à l'effet qui permet de passer d'un contenu (normal,
			long) à un autre (spécial, court).
			Si vous reprenez ce gabarit pour un projet, placez votre contenu
			directement dans div#contenu! -->
			
			<!-- Vous pouvez supprimer la ligne suivante: -->
			<div id="cont-normal" style="display: block;">
			
				<h2>À propos du gabarit 03</h2>
				<h3>Code HTML et CSS</h3>
				<p>Ce gabarit est structuré de la manière suivante:</p>

				<p>Il est mis en forme par deux feuilles de styles:</p>
				<ol>
					<li><a href="styles/base.css">base.css</a> (mise en forme minimale
					du texte, commune à tous les gabarits)</li>
					<li><strong><a href="styles/modele03.css">modele03.css</a></strong>,
					qui contient tous les styles propres à ce gabarit, et que nous vous
					invitons à consulter.</li>
				</ol>
				
			
			<!-- Vous pouvez supprimer la ligne suivante: -->
			</div><!-- #cont-normal -->
			
			<!-- Vous pouvez supprimer les 5 lignes suivantes: -->
			<div id="cont-special" style="display: none;">
				<p>On constate que même lorsque le contenu est court, le bloc
				<code>div#global</code> prend toute la hauteur de son parent,
				l'élément <code>body</code>.</p>
				
			</div><!-- #cont-normal -->
			{% endblock %}
		</div><!-- #contenu -->

		<div id="pied">
			<p id="copyright">
				{% block pc_footer %}
				<a href="{{ path('pi_layout_choisir_langue', {'langue' : 'fr_FR'}) }}" title="">FR</a> | <a href="{{ path('pi_layout_choisir_langue', {'langue' : 'en_GB'}) }}" title="">EN</a> | <a href="{{ path('pi_layout_choisir_langue', {'langue' : 'ar_SA'}) }}" title="">AR</a> | 
				<a href="http://www.sfynx.fr" title="">www.sfynx.fr</a> |  
				<span>Mise en page d'après Elephorm et Alsacréations: www.alsacreations.com/gabarits</span>
				{% endblock %}
			</p>
		</div><!-- #pied -->

	</div><!-- #global -->

				     
{% endblock %}